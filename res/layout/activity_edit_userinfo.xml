<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/back_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        fresco:placeholderImage="@drawable/image_placeholder_white"
        fresco:roundAsCircle="true"
        />
        <!--fresco:placeholderImage="@drawable/image_placeholder_white"-->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        fresco:placeholderImage="@drawable/image_placeholder"
        fresco:roundAsCircle="true"
        />
        <!--fresco:placeholderImage="@drawable/image_placeholder"-->

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="190dp"
        android:layout_marginRight="@dimen/padding">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/font_size"
            tools:textColor="@color/purple_4" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/transparent"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/font_size"
            tools:text="Keonil Kim" />

        <View
            android:id="@+id/name_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/name_input"
            android:layout_marginTop="10dp"
            android:background="@color/normal_gray"
            tools:background="@color/purple_4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/padding">

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/font_size" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/font_size" />

        <View
            android:id="@+id/email_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/email_input"
            android:layout_marginTop="10dp"
            android:background="@color/normal_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/padding">

        <TextView
            android:id="@+id/major_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Major"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/font_size" />

        <EditText
            android:id="@+id/major_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/font_size" />

        <View
            android:id="@+id/major_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/major_input"
            android:layout_marginTop="10dp"
            android:background="@color/normal_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/padding">

        <TextView
            android:id="@+id/job_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Job"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/font_size" />

        <EditText
            android:id="@+id/job_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/font_size" />

        <View
            android:id="@+id/job_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/job_input"
            android:layout_marginTop="10dp"
            android:background="@color/normal_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/layout4"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/padding">

        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="History"
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/font_size" />

        <EditText
            android:id="@+id/history_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/font_size" />

        <View
            android:id="@+id/history_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/history_input"
            android:layout_marginTop="10dp"
            android:background="@color/normal_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/user_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/divider"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white" />

        <Button
            android:id="@+id/user_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/divider"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>


</RelativeLayout>